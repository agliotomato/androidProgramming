<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#FF0000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>